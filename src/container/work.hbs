{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
        <main>
            <section>             
                {{> title data="Work history" big=true}}            
                <div>
                    <ul>
                        {{#each works}}
                            <li>
                                <div>{{position}}</div>

                                <br />

                                <div>
                                    {{duration.from}} - 
                                    {{#if duration.to}} 
                                        {{duration.to}} 
                                    {{else}} 
                                        (ещё работаем) 
                                    {{/if}}
                                </div>

                                <br />

                                <div>
                                    {{#if company.url}}
                                        {{> link text=company.name href=company.url blank=true noLine=true}}
                                    {{else}}
                                        <p>{{company.name}}</p>
                                    {{/if}}
                                </div>

                                <br />
                                <br />

                                <div>
                                    <strong>Projects ({{projectAmount}})</strong>
                                </div>

                                <br />

                                <ul>
                                    {{#each projects}}
                                        <li>
                                            <div>{{> link text=name href=url blank=true noLine=true}}</div>

                                            <br />

                                            <div>
                                                <p>{{about}}</p>
                                            </div>

                                            <br />

                                            <div>
                                                <em>Project stacks ({{stacksAmount}})</em>
                                            </div>

                                            <br />
                                            
                                            {{#each stacks}}
                                                <div>{{name}}</div>
                                            {{/each}}

                                            <br />
                                            <br />

                                            <div>
                                                <em>Project awards ({{awardsAmount}})</em>
                                            </div>

                                            <br>

                                            {{#each awards}}
                                                <div>{{name}}</div>
                                            {{/each}}
                                        </li>
                                    {{/each}}
                                </ul>                               
                            </li>
                            <br />
                        {{/each}}
                    </ul>
                </div>                
            </section>             
        </main>
    {{/with}}
</div>

