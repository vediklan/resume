<div class="card mb-5">
    <div class="card-body">
        <div class="card">
            <div class="card-header">
                {{#with title}}
                <h3>{{userName}}</h3>
                <div>{{caption}}</div>
                <div class="mt-3">{{date}}</div>
                {{/with}}
            </div>

            {{#with reviewBody}}
            <div class="card-body">
                {{#with seller}}
                <div>{{title}}: {{value}}</div>
                {{/with}}

                {{#with rating}}
                <div class="my-4">{{title}}: {{value}}</div>
                {{/with}}

                {{#each text}}
                <div class="mb-4">{{this}}</div>
                {{/each}}

                <div class="mb-4">
                    {{#with advantages}}
                    <div><b>{{title}}:</b></div>
                    <div>{{text}}</div>
                    {{/with}}
                </div>

                <div class="mb-4">
                    {{#with disadvantages}}
                    <div><b>{{title}}:</b></div>
                    <div>{{text}}</div>
                    {{/with}}
                </div>

                <div>
                    {{#each images}}
                    <img src="{{this}}" class="me-1">
                    {{/each}}
                </div>
            </div>

        </div>

        <div class="row col-11">
            {{#each coments}}
            <div class="card my-3 ms-5">
                <div class="card-body">
                    <h4 class="card-title">{{userName}}</h4>
                    <div class="my-2">{{date}}</div>
                    <p class="mb-0">{{text}}</p>
                </div>
            </div>
            {{/each}}
        </div>
        {{/with}}
    </div>
</div>