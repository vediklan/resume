<div>
    {{#each goodsBlock}}
    <div class=" alert alert-dark">
        <div class="row">
            <div class="col-2">
                <img src="{{image}}" class="img-fluid rounded-start" width="150">
            </div>

            <div class="col-4 mt-4">
                <h3 class="card-title">{{name}}</h3>
                <p class="mt-3">{{description}}</p>
            </div>

            <div class="col-2 mt-5 ms-5">
                {{#with price}}
                <div>{{title}}</div>
                <div>{{value}}</div>
                {{/with}}
            </div>

            <div class="col-2 mt-5">
                {{amount}}
            </div>

            <div class="class='list-group col-1 mt-4">
                {{#each buttons}}
                <button
                    class="btn {{#if isPrimary}}btn-primary{{/if}} {{#if isDanger}}btn-outline-danger{{/if}} list-item my-2">
                    {{text}}
                </button>
                {{/each}}
            </div>
        </div>
    </div>
    {{/each}}
</div>